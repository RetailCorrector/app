<Window x:Class="RetailCorrector.Wizard.ModuleManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:q="clr-namespace:RetailCorrector.Wizard"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Менеджер модулей" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox SelectedValue="{Binding Url}" ItemsSource="{Binding Repositories}"/>
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" >
            <ScrollViewer.Content>
                <Border BorderThickness="1" BorderBrush="Gray">
                    <StackPanel x:Name="panel"/>
                </Border>
            </ScrollViewer.Content>
        </ScrollViewer>
    </Grid>
</Window>
