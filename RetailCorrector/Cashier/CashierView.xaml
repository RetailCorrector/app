<Window x:Class="RetailCorrector.Cashier.CashierView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Icon="../Resources/icon.ico" ResizeMode="NoResize"
        Title="Локальный кассир" Height="527" Width="383">
    <Canvas>
        <TextBlock Width="175" Canvas.Left="12" Canvas.Top="14" Text="Предельные размеры буфера:"/>
        <tk:IntegerUpDown Canvas.Left="199" Canvas.Top="12" Width="75"/>
        <tk:IntegerUpDown Canvas.Left="280" Canvas.Top="12" Width="75"/>
        
        <TextBlock Width="185" Canvas.Left="12" Canvas.Top="44" Text="Фискальный модуль:"/>
        <ComboBox Width="185" Canvas.Left="139" Canvas.Top="41"/>
        <Button Width="25" Height="23" Canvas.Left="330" Canvas.Top="41" Content=""
                FontFamily="Segoe MDL2 Assets" FontSize="10"/>
        
        <ScrollViewer Canvas.Left="12" Canvas.Top="70" Width="343" 
                      Height="367" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        
        <Button Content="Отмена" Canvas.Top="440" Canvas.Left="199" Width="75"/>
        <Button Content="Запустить" Canvas.Top="440" Canvas.Left="280" Width="75"/>

        <ProgressBar Canvas.Left="5" Canvas.Bottom="5" Height="16" Width="100"/>
        <TextBlock Width="Auto" Height="17" Canvas.Left="110" Canvas.Bottom="5"/>
    </Canvas>
</Window>