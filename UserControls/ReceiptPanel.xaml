<ItemsControl x:Class="RetailCorrector.Wizard.UserControls.ReceiptPanel"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:ctx="clr-namespace:RetailCorrector.Wizard.Contexts"
              xmlns:local="clr-namespace:RetailCorrector.Wizard.UserControls"
              ItemsSource="{Binding Source={x:Static ctx:WizardDataContext.Receipts}}"
              DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <local:ReceiptView DataSource="{Binding}" Margin="5,7" />
        </DataTemplate>
    </ItemsControl.ItemTemplate>
</ItemsControl>
