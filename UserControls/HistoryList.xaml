<ItemsControl x:Class="RetailCorrector.Wizard.UserControls.HistoryList"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="Auto"
              xmlns:ctx="clr-namespace:RetailCorrector.Wizard.Contexts"             
              ItemsSource="{Binding Source={x:Static ctx:WizardDataContext.History}}">
    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <StackPanel Margin="4"/>
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                <TextBlock Text="{Binding DisplayName}"/>
            </Border>
        </DataTemplate>
    </ItemsControl.ItemTemplate>
</ItemsControl>
