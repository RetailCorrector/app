<Window x:Class="RetailCorrector.Wizard.Windows.Parser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:Masonry;assembly=Masonry"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns:local="clr-namespace:RetailCorrector.Wizard.Windows"
        xmlns:mod="clr-namespace:RetailCorrector.Wizard.ModuleSystem"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Парсер чеков" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.ColumnSpan="7" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <m:MasonryControl/>
        </ScrollViewer>
        <ComboBox Grid.Row="2" ItemsSource="{Binding Source={x:Static mod:ModuleCollection.Modules}}" DisplayMemberPath="Name" 
                  SelectedValuePath="EntryPoint" SelectedValue="{Binding Module}"/>
        <ProgressBar Grid.Row="2" Grid.Column="2"/>
        <Button Grid.Row="2" Grid.Column="4" Content="Отмена"/>
        <Button Grid.Row="2" Grid.Column="6" Content="Запуск"/>
    </Grid>
</Window>
