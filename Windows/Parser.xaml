<Window x:Class="RetailCorrector.Wizard.Windows.Parser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:Masonry;assembly=Masonry"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:RetailCorrector.Wizard.Windows"
        xmlns:mod="clr-namespace:RetailCorrector.Wizard.ModuleSystem"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Парсер чеков" Height="450" Width="800">
    <Grid Margin="10,10,5,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.ColumnSpan="9" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <m:MasonryControl ItemsSource="{Binding Items}" Spacing="5"/>
        </ScrollViewer>
        <tk:WatermarkComboBox Grid.Row="2" ItemsSource="{Binding Source={x:Static mod:ModuleCollection.Modules}}"
                              DisplayMemberPath="Name" SelectedValuePath="EntryPoint" SelectedValue="{Binding Module}"
                              Watermark="Источник данных"/>
        <ProgressBar Grid.Row="2" Grid.Column="2"/>
        <Button Grid.Row="2" Grid.Column="4" Content="Отмена"/>
        <Button Grid.Row="2" Grid.Column="6" Content="Запуск"/>
    </Grid>
</Window>
