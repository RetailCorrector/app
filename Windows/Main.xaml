<Window x:Class="RetailCorrector.Wizard.Windows.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:uc="clr-namespace:RetailCorrector.Wizard.UserControls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RetailCorrector.Wizard.Windows"
        xmlns:ctx="clr-namespace:RetailCorrector.Wizard.Contexts"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="RetailCorrector" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True">
            <MenuItem Header="Пространство">
                <MenuItem Header="Создать новое" Command="{Binding ClearSpace}" InputGestureText="Ctrl + N"/>
                <MenuItem Header="Получить чеки" Command="{Binding ShowParser}" InputGestureText="Ctrl + P"/>
                <MenuItem Header="Добавить чек вручную" Command="{Binding ShowReceiptWizard}" InputGestureText="Ctrl + Alt + P"/>
                <MenuItem Header="Дизайнер отчета" Command="{Binding ShowReport}" InputGestureText="Ctrl + R"/>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem Header="Отменить" Command="{Binding Undo}" InputGestureText="Ctrl + Z"/>
                <MenuItem Header="Инвертировать выделение" Command="{Binding InvertSelect}" InputGestureText="Ctrl + Shift + I"/>
            </MenuItem>
            <MenuItem Header="Вид">
                <MenuItem Header="Список чеков" IsCheckable="True"/>
                <MenuItem Header="История изменений" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="Сервисы">
                <MenuItem Header="Менеджер модулей" Click="RunModuleManager"/>
                <MenuItem Header="Локальный кассир"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="Открыть лог-папку" Click="ShowLogs"/>
                <MenuItem Header="Документация" Click="ShowDocs"/>
                <MenuItem Header="О программе" Click="ShowAbout"/>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
            <uc:ReceiptPanel x:Name="panel"/>
        </ScrollViewer>
    </Grid>
</Window>
