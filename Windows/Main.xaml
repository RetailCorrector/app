<Window x:Class="RetailCorrector.Wizard.Windows.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RetailCorrector.Wizard.Windows"
        Title="RetailCorrector" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True">
            <MenuItem Header="Пространство">
                <MenuItem Header="Создать новое"/>
                <MenuItem Header="Получить чеки"/>
                <MenuItem Header="Дизайнер отчета" Click="ShowReport"/>
                <MenuItem Header="Экспорт">
                    <MenuItem Header="Для локальной работы"/>
                    <MenuItem Header="Для удалённой работы"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Вид">
                <MenuItem Header="Список чеков" IsCheckable="True"/>
                <MenuItem Header="История изменений" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="Сервисы">
                <MenuItem Header="Менеджер модулей"/>
                <MenuItem Header="Локальный кассир"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="Открыть лог-папку" Click="ShowLogs"/>
                <MenuItem Header="Документация" Click="ShowDocs"/>
                <MenuItem Header="О программе" Click="ShowAbout"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
