<Window x:Class="RetailCorrector.Wizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RetailCorrector.Wizard"        
        xmlns:p="clr-namespace:RetailCorrector.Wizard.Pages"
        ResizeMode="CanMinimize" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="450" Width="800">
    <TabControl SelectionChanged="ActivationTabChanged">
        <TabItem Header="Парсер">
            <p:Parser/>
        </TabItem>
        <TabItem Header="Фильтр" IsEnabled="{Binding IsEnableEditor}">
            <p:Filter/>
        </TabItem>
        <TabItem Header="Редактор чека" IsEnabled="{Binding IsEnableEditor}">
            <p:Editor/>
        </TabItem>
        <TabItem Header="Редактор отчета">
            <p:Report/>
        </TabItem>
        <TabItem Header="Сборка" IsEnabled="{Binding IsEnablePublisher}">
            <p:Publisher/>
        </TabItem>
    </TabControl>
</Window>
