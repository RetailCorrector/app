<UserControl x:Class="RetailCorrector.Wizard.Pages.Parser" Margin="5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:r="clr-namespace:RetailCorrector.Wizard"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="{x:Null}"/>
        </Style>
        <DataTemplate x:Key="NumberTemplate"/>

        <DataTemplate x:Key="BoolTemplate">
            <CheckBox IsChecked="{Binding Value}"/>
        </DataTemplate>
        <DataTemplate x:Key="EnumTemplate">
            <ComboBox SelectedValue="{Binding Value}" ItemsSource="{Binding ValuesFromEnum}" SelectedValuePath="Key" DisplayMemberPath="Value"/>
        </DataTemplate>
        <DataTemplate x:Key="DateTemplate">
            <DatePicker SelectedDate="{Binding ValueAsDateTime}"/>
        </DataTemplate>
        <DataTemplate x:Key="StringTemplate">
            <TextBox Text="{Binding Value}" VerticalContentAlignment="Center"/>
        </DataTemplate>
        <r:ParserValueTemplateSelector
            x:Key="ParserValueTemplateSelector"
            NumberTemplate="{StaticResource NumberTemplate}"
            BoolTemplate="{StaticResource BoolTemplate}"
            EnumTemplate="{StaticResource EnumTemplate}"
            DateTemplate="{StaticResource DateTemplate}"
            StringTemplate="{StaticResource StringTemplate}"/>
    </UserControl.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock Text="Модуль ОФД:" VerticalAlignment="Center"/>
            <GridSplitter Width="5"/>
            <Button Content="Менеджер" DockPanel.Dock="Right" Click="Button_Click" Width="75"/>
            <GridSplitter Width="5" DockPanel.Dock="Right"/>
            <ComboBox ItemsSource="{Binding Source={x:Static r:ModuleCollection.Modules}}" SelectedItem="{Binding Package}" DisplayMemberPath="Name"/>
        </DockPanel>
        <GridSplitter Height="5" DockPanel.Dock="Top"/>
        <DockPanel DockPanel.Dock="Bottom" Height="22">
            <Button DockPanel.Dock="Right" Content="Поиск" Width="70" IsEnabled="{Binding SearchEnabled}" Click="RunSearch"/>
            <GridSplitter Width="5" DockPanel.Dock="Right"/>
            <Button DockPanel.Dock="Right" Content="Отмена" Width="70" IsEnabled="{Binding CancelEnabled}" Click="CancelSearch"/>
            <GridSplitter Width="5" DockPanel.Dock="Right"/>
            <ProgressBar Maximum="{Binding MaxProgress}" Value="{Binding CurrentProgress}"/>
        </DockPanel>
        <GridSplitter Height="5" DockPanel.Dock="Bottom"/>
        <DataGrid VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Settings}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Настройка" Width="*" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" Text="{Binding Key}" Margin="3,0" Height="24" FontSize="17"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Значение" Width="*" 
                    CellTemplateSelector="{StaticResource ParserValueTemplateSelector}"
                    CellEditingTemplateSelector="{StaticResource ParserValueTemplateSelector}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
